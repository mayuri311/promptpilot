{
    "manifest_version": 3,
    "name": "promptpilot",
    "version": "1.0",
    "description": "Real-time prompt engineering suggestions for better AI interactions.",
    "permissions": [
      "storage",
      "tabs",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://chat.openai.com/*",
      "https://claude.ai/*",
      "https://bard.google.com/*",
      "https://www.perplexity.ai/*",
      "https://you.com/*",
      "https://poe.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_title": "Your Prompt Pilot"
    },
    "content_scripts": [
      {
        "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://bard.google.com/*",
        "https://www.perplexity.ai/*",
        "https://you.com/*",
        "https://poe.com/*"
      ],
        "css": ["style.css"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "icons": {
      "16": "icons/promptpilot16.png",
      "48": "icons/promptpilot48.png",
      "512": "icons/promptpilot512.png"
    }
}